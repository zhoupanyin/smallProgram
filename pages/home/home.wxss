/* pages/home/home.wxss */
.weui-input{
  width:100%;
  height: 30px;
  margin:2px;
  border:1px solid rgb(73, 219, 97);
  position:relative;
}
.pry{
  height:30px;
  border-radius: 0px;
  position:absolute;
  right:0px;
  top:3px;
}
.swiper image{
  width: 100%;
  height:180px;
}
.btn-area,.btn-area1,.btn-area2{
  width: 100%;
  display: flex;
}
.btn-area navigator,.btn-area1 navigator{
  flex: 1;
  height: 80px;
  line-height: 80px;
  text-align: center;
  font-size: 12px;
}
.btn-area navigator:nth-of-type(1){
  background-color: green;
}
.btn-area navigator:nth-of-type(2){
  background-color: rgb(42, 178, 0)
}
.btn-area navigator:nth-of-type(3){
  background-color: rgb(73, 219, 97)
}
.btn-area navigator:nth-of-type(4){
  background-color: rgb(73, 219, 139)
}
.btn-area1 navigator:nth-of-type(1){
  background-color: rgb(73, 219, 139)
}
.btn-area1 navigator:nth-of-type(2){
  background-color: rgb(73, 219, 97)
}
.btn-area1 navigator:nth-of-type(3){
  background-color: rgb(42, 178, 0)
}
.btn-area1 navigator:nth-of-type(4){
  background-color: green
}
.nav{
  margin: 10px 15px;
  width: 45%;
  line-height: 70px;
  background-color: rgb(73, 219, 139);
  height:70px;
  border-radius: 5px;
  text-align: center;
}
.vew{
  width: 95%;
  height: 100px;
  line-height: 100px;
  background-color: rgb(73, 219, 139);
  margin: 5px 10px;
  border-radius: 5px;
  text-align: center;
}
